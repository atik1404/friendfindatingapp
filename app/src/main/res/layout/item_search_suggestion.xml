<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ivImage"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_1sdp"
            android:textSize="@dimen/_12ssp"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Suggestion 1"/>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/linCategory"
            android:layout_below="@+id/tvText"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:textSize="@dimen/_8ssp"
                android:text="In"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="in "/>

            <TextView
                android:id="@+id/tvStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_8ssp"
                android:text=" your chat list"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:textColor="@color/color6"
                tools:text="  your chat list"/>
        </LinearLayout>





        <ImageView

            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_minus4sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:scaleY="1.1"
            android:scaleX="1.1"
            app:srcCompat="@drawable/ic_suggestion"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/linCategory"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/Black_transparent_black_hex_1"/>

    </RelativeLayout>

</layout>